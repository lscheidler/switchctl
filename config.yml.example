- applications:
    - name: app1
  environments:
    - production
    - staging
  template: app-{{ .Application }}-{{ .InstanceNumber }}.{{ .Environment }}.<domain>
  instances: 2

- applications:
    - name: frontend1
      alias: frontend-alias
    - name: frontend2
  environments:
    - production
    - staging
  template: http-{{ .InstanceNumber }}.{{ .Environment }}.<domain>
  instances: 2
  reverseInstanceOrder: true

- applications:
    - regexp: srv-.*
  environments:
    - staging
  template: srv-{{ .InstanceNumber }}.{{ .Environment }}.<domain>
  instances: 1
